
<h2>My tasks</h2>
<% @tasks.each do |task| %>
  <div>
    <!-- Checkbox before the task title -->
    <input type="checkbox" <%= 'checked' if task.completed %>> <!-- Optional 'disabled' to make it uneditable -->
    <!-- Task Title with Edit Link -->
    <%= link_to task_path(task), style: 'text-decoration: none;' do %>
      <%= task.title %> .
    <% end %>
    <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>
<div class="mt-4">
  <%= link_to '<i class="fa-regular fa-plus"></i> Add a new task'.html_safe, new_task_path %>
</div>